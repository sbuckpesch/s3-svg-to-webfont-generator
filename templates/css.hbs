$aa-font-path: "../fonts" !default;

@font-face {
    font-family: "{{ fontName }}";
    src: {{{ src }}};
    font-weight: normal;
    font-style: normal;
}

.{{ baseTag }} {
    /* use !important to prevent issues with browser extensions that change fonts */
    font-family: '{{fontName}}' !important;
    display: inline-block;
    text-rendering: auto;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;

    /* Better Font Rendering =========== */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

//Icon Name Variables
{{# each codepoints }}
${{ ../classPrefix }}{{ @key }}: "\\{{ this }}";
{{/ each }}


{{# each codepoints }}
.{{ ../classPrefix }}{{ @key }}:before {
    content: ${{ ../classPrefix }}{{ @key }};
}
{{/ each }}